<Window x:Class="CursorBackup.Dialogs.FolderBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Folder" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="{Binding Description}" 
                  Margin="0,0,0,10"
                  FontSize="14"
                  Foreground="#FFFFFF"/>

        <TreeView Grid.Row="1" 
                 Name="FolderTreeView"
                 Margin="0,0,0,10"
                 SelectedItemChanged="FolderTreeView_SelectedItemChanged"
                 Background="#252526"
                 Foreground="#FFFFFF"
                 AllowDrop="False"
                 BorderThickness="1"
                 BorderBrush="#3F3F46">
            <TreeView.Resources>
                <Style TargetType="TreeViewItem">
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Focusable" Value="True"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#007ACC"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3F3F46"/>
                        </Trigger>
                    </Style.Triggers>
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#007ACC"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FFFFFF"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#3F3F46"/>
                    </Style.Resources>
                </Style>
            </TreeView.Resources>
        </TreeView>

        <TextBox Grid.Row="2" 
                Name="SelectedPathTextBox"
                Margin="0,0,0,10"
                IsReadOnly="True"
                Background="#3F3F46"
                Foreground="#FFFFFF"
                BorderBrush="#007ACC"/>

        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="OK" 
                   Width="80" 
                   Height="30" 
                   Margin="0,0,10,0"
                   Click="OkButton_Click"
                   IsDefault="True"
                   Background="#007ACC"
                   Foreground="#FFFFFF"
                   BorderThickness="0"/>
            <Button Content="Cancel" 
                   Width="80" 
                   Height="30"
                   Click="CancelButton_Click"
                   IsCancel="True"
                   Background="#3F3F46"
                   Foreground="#FFFFFF"
                   BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>

